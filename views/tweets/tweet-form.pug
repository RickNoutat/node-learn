extends ../layout

block content
  div(class="d-flex flex-row content mx-auto")
    div(class="profile-container")
      include ../includes/profile
    div(class="flex-fill")
      form(class="card" method="POST" action=tweet._id ? "/tweets/update/" + tweet._id : "/tweets")
        div(class="card-header") Ecrire un tweet 
        div(class="card-body")
          div(class="form-group mb-3")
            textarea(class="form-control mb-3" name="content" rows="3" placeholder="What's happening?")= tweet.content
          if errors
            ul(class="my-2")
              each error in errors
                li(class="text-danger")= error
          div(class="w-100")
            input(class="btn btn-primary ms-auto d-block" type="submit" value="Send")